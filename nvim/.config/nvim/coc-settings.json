{
    "languageserver": {
      "sh": {
        "command": "bash-language-server",
        "args": [
          "start"
        ],
        "filetypes": ["sh"]
      },
      "c": {
        "command": "cquery",
        "filetypes": ["c", "cpp", "cc"],
        "initializationOptions": {
          "cacheDirectory": "/usr/local/cquery-cache"
        }
      },
      "rust": {
        "command": "rls",
        "filetypes": ["rust"]
      },
      "go": {
        "command": "go-langserver",
        "filetypes": ["go"],
        "args": [
          "-gocodecompletion",
          "-freeosmemory=false",
          "-func-snippet-enabled=false",
          "-format-tool=goimports",
          "-lint-tool=golint",
          "-diagnostics=true"
        ]
      }
  },
  "coc.preferences.autoTrigger": "trigger",
  "coc.preferences.triggerAfterInsertEnter": false
}
