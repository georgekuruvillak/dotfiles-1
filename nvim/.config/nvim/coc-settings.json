{
    "languageserver": {
      "sh": {
        "command": "bash-language-server",
        "args": [
          "start"
        ],
        "filetypes": ["sh"]
      },
      "c": {
        "command": "clangd",
        "filetypes": ["c", "cpp", "cc"]
      },
      "rust": {
        "command": "rls",
        "filetypes": ["rust"]
      },
      "go": {
        "command": "go-langserver",
        "filetypes": ["go"],
        "args": [
          "-gocodecompletion",
          "-freeosmemory=false",
          "-func-snippet-enabled=false",
          "-format-tool=goimports",
          "-diagnostics=true"
        ]
      }
  },
  "coc.source.gocode.enable": false,
  "coc.preferences.autoTrigger": "trigger",
  "coc.preferences.triggerAfterInsertEnter": false,
  "coc.source.ultisnips.enable": true
}
