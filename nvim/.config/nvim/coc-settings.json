{
    "languageserver": {
      "sh": {
        "command": "bash-language-server",
        "args": [
          "start"
        ],
        "filetypes": ["sh"]
      },
      "cquery": {
        "command": "cquery",
        "args": ["--log-file=/tmp/cq.log"],
        "filetypes": ["c", "cpp"],
        "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
        "initializationOptions": {
          "cacheDirectory": "/tmp/cquery"
        }
      },
      "rust": {
        "command": "rls",
        "filetypes": ["rust"]
      },
      "go": {
        "command": "gopls",
        "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
        "filetypes": ["go"]
      }
  }
}
