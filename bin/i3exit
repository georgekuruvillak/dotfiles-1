#!/bin/sh
lock() {
    BGBLUR=/tmp/bgblur.png
    scrot $BGBLUR
    convert $BGBLUR  -channel RGBA -blur 0x8 $BGBLUR
    i3lock -i $BGBLUR
}

case "$1" in
    lock)
        lock
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        lock && systemctl suspend
        ;;
    hibernate)
        lock && systemctl hibernate
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
