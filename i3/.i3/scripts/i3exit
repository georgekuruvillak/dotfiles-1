#!/bin/sh
lock() {
  tmpbg='/tmp/screen.png'
  scrot -z "$tmpbg"
  convert "$tmpbg" -scale 10% -scale 1000% "$tmpbg"
  i3lock -t -f -i "$tmpbg"
}

case "$1" in
    lock)
        lock
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        lock && systemctl suspend
        ;;
    hibernate)
        lock && systemctl hibernate
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
